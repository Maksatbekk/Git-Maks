package com.company;//import jdk.nashorn.internal.parser.Scanner;

import javax.swing.*;

public class GuessingGame
{
    public static void main(String[] args)
    {
        int computerNumber = (int) (Math.random()*8999 + 1000);

        int userAnswer = 0;

        int count = 1;

        int minus = 0;

        int plus = 0;

        String str = "";

        String name = JOptionPane.showInputDialog(null,
                "Welcome to Number Guessing Game. Please Enter your name: ", "Guessing Game", 3);

        while (userAnswer != computerNumber)
        {
            String response = JOptionPane.showInputDialog(null,
                    "Enter a guess between 1000 and 10000", "Guessing Game", 3);
            userAnswer = Integer.parseInt(response);
            JOptionPane.showMessageDialog(null, ""+ determineGuess(computerNumber, userAnswer, plus, minus, str));
            count++;

        }

        JOptionPane.showMessageDialog(null, ""+name+"!  "+define(count));

    }

    public static String determineGuess(int computerNumber, int userAnswer, int plus, int minus, String sign) {
        String comString = Integer.toString(computerNumber);
        String usString = Integer.toString(userAnswer);
        String[] comInt = new String[4];
        String[] usInt = new String[4];

        for (int i = 0; i < usString.length(); i++) {
            char c = comString.charAt(i);
            comInt[i] += c;
            char h = usString.charAt(i);
            usInt[i] += h;
        }

        for (int s = 0; s < 4; s++) {
            if (comInt[s] == usInt[s]) {
                plus += 1;
                sign += plus;
            }
        }//sign += "+";

        for (int k = 1; k <= 4; k++) {
            for (int j = 4 - k; j > 0; j--) {
                if (comInt[j] == usInt[k]) {
                    minus += -1;
                    sign += minus;
                }
            }
        }

        return sign;
    }

    public static String define(int count){
        if(count > 0 && count <= 6){
            return "You are genius! :)";
        }else if(count > 6 && count <= 10){
            return "You are nearly genius :D";
        }else {
            return "Very bad :(";
        }
    }
}
